{
  "name": "happy-coding-vscode-extension",
  "displayName": "some useful tools when coding,such as cli...",
  "description": "some useful tools when coding,such as cli...",
  "version": "2.0.0",
  "publisher": "HaoFuYang",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:coder-view",
    "onCommand:coding.start",
    "onCommand:coding.stop"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "coder-view",
          "title": "HAPPY Coding",
          "icon": "./panel.svg"
        }
      ]
    },
    "views": {
      "coder-view": [
        {
          "icon": "./panel.svg",
          "type": "webview",
          "id": "coder-view",
          "name": "Cli"
        }
      ]
    },
    "commands": [
      {
        "command": "panelDetails.show",
        "title": "Show Panel Details"
      },
      {
        "command": "coding.start",
        "title": "Start Coding"
      },
      {
        "command": "coding.stop",
        "title": "Stop Coding"
      },
      {
        "command": "autoInlineGenerator.tab",
        "title": "Tab Auto Inline Generator"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "dev:webview": "cd webview-side-bar && npm run dev",
    "build:webview": "cd webview-side-bar && npm install && npm run build",
    "build:extension": "esbuild src/extension.js --bundle --platform=node --external:vscode --outfile=dist/extension.js",
    "build": "npm run build:webview && npm run build:extension",
    "onlyPackage": "vsce package",
    "package": "npm run build && vsce package"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/vscode": "^1.102.0",
    "@vscode/vsce": "^3.6.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@happy.cli/utils": "^1.0.8",
    "cec-client-server": "^1.3.2",
    "ejs": "^3.1.10",
    "esbuild": "^0.25.8",
    "execa": "^9.5.2",
    "fs-extra": "^11.3.0",
    "path-exists": "^5.0.0",
    "reflect-metadata": "^0.2.2"
  }
}
